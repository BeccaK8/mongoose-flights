<%- include('../partials/header') %>

<section id="show-page">
    <div>Airline:</div>
    <div><%= flight.airline %></div>
    <div>Airport:</div>
    <div><%= flight.airport %></div>
    <div>Flight Number:</div>
    <div><%= flight.flightNo %></div>
    <div>Departs:</div>
    <div>
        <%= flight.departs.toLocaleString("en-US", {
            year: "numeric",
            month: "2-digit",
            day: "2-digit",
            hour: "2-digit",
            minute: "2-digit"
        }) %>
    </div>
</section>
<br>
<hr>
<section id="destinations">
    <h2>Destinations:</h2>
    <table class="table-destinations">
        <thead>
            <th>Airport</th>
            <th>Arrival</th>
        </thead>
        <%  if (flight.destinations.length) { %>
            <% flight.destinations.sort((a, b) => {
                const aDate = new Date(a.arrival);
                const bDate = new Date(b.arrival);
                if (aDate < bDate) return -1;
                if (aDate > bDate) return 1;
                return 0;
            });
            %>
        
            <% flight.destinations.forEach(function(d) { %>
                <tr>
                    <td><%= d.airport %></td>
                    <td><%= d.arrival.toLocaleString("en-US", {
                        year: "numeric",
                        month: "2-digit",
                        day: "2-digit",
                        hour: "2-digit",
                        minute: "2-digit"
                    }) %></td>
                </tr>
            <% }) %>
        <% } else { %>
            <tr>
                <td colspan="2">No Destinations</td>
            </tr>
            <% } %>
        </table>
</section>

<section>
    <h3>Add Destination:</h3>
    <form  id="destination-form" action="/flights/<%= flight._id %>/destinations" method="post">
        <label>
            Airport:
            <select name="airport">
                <option value="AUS">AUS</option>
                <option value="DTW">DTW</option>
                <option value="DEN">DEN</option>
                <option value="LAX">LAX</option>
                <option value="ORD">ORD</option>
                <option value="SAN">SAN</option>
            </select>
        </label><br>
        <label>
            Arrival Date/Time:
            <input type="datetime-local" name="arrival">
        </label><br>
        <button type="submit">Add Destination</button>
    
    </form>
</section>

<%- include('../partials/footer') %>